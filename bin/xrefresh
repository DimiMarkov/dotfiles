#!/bin/sh

if xrandr -q | grep "DP1-2 connected"; then 
  xrandr --output DP1-2 --right-of eDP1 --scale 1.5x1.5 --mode 2560x1440 --primary
  sleep 0.2
  i3-msg "workspace 3, move workspace to output DP1-2"
  i3-msg "workspace 4, move workspace to output DP1-2"
  i3-msg "workspace 6, move workspace to output DP1-2"
  i3-msg "workspace 7, move workspace to output DP1-2"
  i3-msg "workspace 8, move workspace to output DP1-2"
  i3-msg "workspace 9, move workspace to output DP1-2"
  i3-msg "workspace 10, move workspace to output DP1-2"
elif xrandr -q | grep "DP1-2 disconnected"; then
  xrandr --output DP1-2 --auto 
  if xrandr -q | grep "DP1-3 connected"; then 
    sleep 0.2
    i3-msg "workspace 3, move workspace to output DP1-3"
    i3-msg "workspace 4, move workspace to output DP1-3"
    i3-msg "workspace 6, move workspace to output DP1-3"
    i3-msg "workspace 7, move workspace to output DP1-3"
    i3-msg "workspace 8, move workspace to output DP1-3"
    i3-msg "workspace 9, move workspace to output DP1-3"
    i3-msg "workspace 10, move workspace to output DP1-3"
  fi
fi

if xrandr -q | grep "DP1-3 connected"; then
  xrandr --output DP1-3 --pos 6784x450 --scale 1.8x1.8 --auto
  sleep 0.5
  i3-msg "workspace 7, move workspace to output DP1-3"
  i3-msg "workspace 6, move workspace to output DP1-3"
elif xrandr -q | grep "DP1-3 disconnected"; then
  xrandr --output DP1-3 --auto
  if xrandr -q | grep "DP1-2 connected"; then
    i3-msg "workspace 6, move workspace to output DP1-2"
    i3-msg "workspace 7, move workspace to output DP1-2"
  fi
fi

# wallpaper
feh --bg-scale ~/Documents/Wallpapers/wallpaper.jpg

~/.config/polybar/launch.sh

i3-msg "reload"
